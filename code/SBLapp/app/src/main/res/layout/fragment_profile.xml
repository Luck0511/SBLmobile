<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="logoImage"
                android:src="@drawable/logo_title_logo"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Profile"
                    android:scaleType="centerInside"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:id="@+id/profileUsername"
                    android:layout_width="152dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="USERNAME"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/btnBookNr"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Elenco" />

                <Button
                    android:id="@+id/btnStatistic"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Statistica" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:text="Liste"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnGoToLists"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotationY="181"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/layergroup" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/layergroup" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/layergroup" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/layergroup" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="Libri"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnGoToBooks"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotationY="181"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/books" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/books" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/books" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:contentDescription="Profile"
                        android:padding="12dp"
                        android:src="@drawable/books" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>